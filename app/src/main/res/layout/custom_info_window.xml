<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iconInfo"
                android:src="@android:drawable/ic_dialog_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/winTitle"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Hello"
                android:layout_toRightOf="@+id/iconInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mangitude"
                android:layout_toRightOf="@+id/iconInfo"
                android:layout_below="@+id/winTitle"
                android:text="Magnitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn"
                android:layout_toRightOf="@id/mangitude"
                android:layout_marginLeft="6dp"
                android:layout_alignBottom="@id/mangitude"
                android:text="More Info.."
                android:textColor="@color/colorAccent"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>